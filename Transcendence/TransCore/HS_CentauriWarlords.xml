								(if (typ@ &HS_svCentauriWarlordCivilians; 'playerCanTrade)
									(scrShowScreen gScreen &RPG_dsRPGCommoditiesExchange;)
									(scrShowScreen gScreen &RPG_dsRPGMessage; { textID: 'descNoTrade })
