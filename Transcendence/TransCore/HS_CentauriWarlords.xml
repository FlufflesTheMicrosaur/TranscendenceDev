					)
					(switch
						(= status 'destroyedByPlayer)
							{
								descID: 'achievement.destroyedByPlayer
								sectionID: 'achievementsAndRegrets
								}
						)
					)
			</GetGlobalAchievements>
		</Events>

		<Language>
			<Text id="achievement.destroyedByPlayer">Killed Arco Vaughn in Eridani</Text>
