			maxAppearing=		"1"
			>

		<ImageVariants>
			<Image	imageID="&HS_rsCommonwealthSlumsImage;" imageX="0" imageY="128" imageWidth="64" imageHeight="64"/>
			<Image	imageID="&HS_rsCommonwealthSlumsImage;" imageX="64" imageY="128" imageWidth="64" imageHeight="64"/>
			<Image	imageID="&HS_rsCommonwealthSlumsImage;" imageX="128" imageY="128" imageWidth="64" imageHeight="64"/>
			<Image	imageID="&HS_rsCommonwealthSlumsImage;" imageX="192" imageY="128" imageWidth="64" imageHeight="64"/>
		</ImageVariants>

		<Ships>
			<Ship				count="1" class="&HS_scArcoVaughnHeavyRaider;"		orders="patrol" patrolDist="5"/>
		</Ships>

		<Items>
			<Item		chance="80" count="1d6" item="&HS_itCentauriRice;"/>
		</Items>

		<Events>
			<OnAttacked>
				(block (
					(arcoVaughnObj (sysFindObject Nil "sAN +arcoVaughn"))
					)
					(switch
						;	If Arco is dead, nothing to do
						
						(not arcoVaughnObj)
							Nil
							
						;	If arco is already attacking the player, nothing to do.
						
						(= (objGetData arcoVaughnObj 'behavior) 'killPlayer)
							Nil
							
						;	If the attack is not from the player, or if we can't see
						;	the player, then nothing to do
						
						(or (!= aOrderGiver gPlayerShip)
								(not (objCanDetectTarget arcoVaughnObj gPlayerShip))
								)
							Nil

						;	Arco attacks the player
						
						(objFireEvent arcoVaughnObj 'OrderKillPlayer)
						)
					)
			</OnAttacked>
		</Events>

