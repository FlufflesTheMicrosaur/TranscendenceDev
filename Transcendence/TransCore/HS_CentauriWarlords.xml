	<StationType UNID="&HS_stArcoVaughnHabitat;"
			name=				": Arco Vaughn's container habitat"
			sovereign=			"&HS_svCentauriWarlords;"
			
			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"
