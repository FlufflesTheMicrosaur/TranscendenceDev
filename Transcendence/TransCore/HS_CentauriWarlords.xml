<TranscendenceModule>

	<Sovereign UNID="&HS_svCentauriWarlords;"
			name=":the Centauri coalition"
			shortName=":the Centauri"
			adjective="Centauri"
			demonym=":a Centauri warlord(s)"
			plural="true"

			alignment="destructive order"
			/>

	<Sovereign unid="&HS_svCentauriWarlordCivilians;"
			name=":the Centauri coalition"
			shortName=":the Centauri"
			adjective="Centauri"
			demonym=":a Centauri warlord(s)"
			plural="true"

			alignment="neutral"
			>
		<Properties>
			<Global id="playerCanTrade">Nil</Global>
		</Properties>

		<Relationships>
			<Relationship sovereign="&HS_svCentauriWarlords;" disposition="friend" mutual="true"/>
		</Relationships>

		<Events>
			<OrderSetPlayerCanTrade>
				(if (!= (sovGetDisposition gType &CORE_svPlayer;) 'enemy)
					(typSet@ gType 'playerCanTrade True)
					)
			</OrderSetPlayerCanTrade>

			<OrderSetPlayerIsEnemy>
				(block ()
					(sovSetDisposition gType &CORE_svPlayer; 'enemy)
					(sovSetDisposition &CORE_svPlayer; gType 'enemy)

					(typSet@ gType 'playerCanTrade Nil)
					)
			</OrderSetPlayerIsEnemy>
		</Events>
	</Sovereign>

	<SystemMap unid="&HS_smCentauriWarlordsSpace;"
			displayOn="&HS_smHumanSpace;"
			>
		<TopologyProcessor priority="primaryColony">
			<System criteria="+newBeyond;"	attributes="centauriWarlordsSpace"/>
		</TopologyProcessor>
	</SystemMap>

