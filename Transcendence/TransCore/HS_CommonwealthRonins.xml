<TranscendenceModule>

<!-- SHIP CLASSES -->

	<!-- Level 2: Ronin A-class Gunship -->

	<ShipClass UNID="&HS_scRoninA;"
			manufacturer=		"Pacific Defense"
			class=				"Ronin/A"
			type=				"gunship"
			defaultSovereign=	"&HS_svCommonwealth;"

			attributes=			"commonwealth, genericClass, pacificDefense"
			inherit=			"&HS_baHumanTechShip;"
			>

		<!-- Hull -->

		<Hull
			size=				"18"
			mass=				"50"
			cargoSpace=			"50"

			maxReactorPower=	"10000"
			maxCargoSpace=		"100"
			maxDevices=			"6"

			maxArmor=			"heavy"
			stdArmor=			"medium"
			/>

		<Drive
			maxSpeed=			"20"
			thrust=				"400"
			/>

		<Maneuver
			maxRotationRate=	"9.0"
			rotationAccel=		"2.0"
			/>

		<!-- Configuration -->

		<Armor
			armorID=			"&HS_itLightCeramicPlate;"
			count=				"4"
			/>
		
		<Devices>
			<Device deviceID="&HS_itBlaster;"/>
		</Devices>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsRoninA;" imageWidth="48" imageHeight="48" rotationCount="120" rotationColumns="12" viewportRatio="0.00275"/>
		<HeroImage imageID="&HS_rsRoninAHero;" imageWidth="320" imageHeight="320"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="148"	posRadius="20"	posZ="0"	rotation="180"/>
