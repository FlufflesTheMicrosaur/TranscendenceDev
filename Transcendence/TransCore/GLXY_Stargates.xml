<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

	<!-- Stargate -->

	<StationType UNID="&GLXY_stStargate;"
			name=				"(stargate)"
			sovereign=			"&CORE_svNeutral;"
			dockScreen=			"Main"

			immutable=			"true"

			attributes=			"generic, stargate"
			
			gateEffect=			"&GLXY_efStargateOut;"
			definiteArticle=	"true"
			>
		<Encounter
				exclusionRadius="50"
				/>

		<Image imageID="&GLXY_rsDaazhenStargate;" imageWidth="350" imageHeight="350" imageFrameCount="48" imageTicksPerFrame="1" animationColumns="6"/>

		<DockingPorts
				portCount=		"4"
				portRadius=		"190"
				>
		</DockingPorts>
		
		<DockScreens>
			<Main>
				<Panes>
					<Default descID="descWelcome">
						<Actions>
							<Action name="Undock" cancel="1" key="U">
								<Exit/>
							</Action>
						</Actions>
					</Default>
				</Panes>
			</Main>
		</DockScreens>

		<Language>
			<Text id="descWelcome">

				You are docked at an alien stargate. These giant structures are 
				used by the Ancient Races to move their starships across the 
				Galaxy.
				
				Stargates are the best mode of faster-than-light travel and 
				they are the only method known to humans.

			</Text>
		</Language>
	</StationType>

	<!-- Stargate beacon -->

	<StationType UNID="&GLXY_stStargateBeacon;"
