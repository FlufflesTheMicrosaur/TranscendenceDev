			level=				"1"
			value=				"28"
			mass=				"1000"
			frequency=			"common"
			numberAppearing=	"1d4"
			unknownType=		"&HS_itUnknownBarrel;"
			attributes=			"armorRepair, consumable, humanTech"

			description=		"Apply this paste to an armor segment to repair light to moderate damage. It works on armor up to level 5."

