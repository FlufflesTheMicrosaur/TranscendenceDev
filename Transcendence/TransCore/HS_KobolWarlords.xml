					<Ship count="1d4"	class="&HS_scKobolGunshipOmniTeV9;"		orders="escort"/>
				</Escorts>
			</Ship>
			<Ship levelFrequency="----- --ucr"	count="1"	class="&HS_scKobolGunshipMissiles;"	eventHandler="&RPG_evStdPatrolEncounterBehavior;">
				<Escorts>
					<Ship count="1d4"	class="&HS_scKobolGunshipMissiles;"		orders="escort"/>
				</Escorts>
			</Ship>
		</LevelTable>
