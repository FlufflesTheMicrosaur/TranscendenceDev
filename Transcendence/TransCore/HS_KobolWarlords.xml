<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- Kobol Syndicate ======================================================= -->

	<Sovereign UNID="&HS_svKobolWarlords;"
			name=":the Kobol Syndicate"
			shortName=":the Kobol"
			adjective="Kobol"
			demonym=":a Kobol warlord(s)"
			plural="true"

			alignment="destructive chaos"
			/>

	<SystemMap unid="&HS_smKobolSpace;"
			displayOn="&HS_smHumanSpace;"
			>
		<TopologyProcessor priority="secondaryColony">
			<System criteria="+outerRealm;"				attributes="kobolSpace"/>
		</TopologyProcessor>
	</SystemMap>

<!-- STATION TYPES -->

	<!-- Level 7: Kobol Warlord Camp -->

	<StationType UNID="&HS_stKobolWarlordCamp;"
			name=				"Kobol warlord outpost(s)"
			sovereign=			"&HS_svKobolWarlords;"

			attributes=			"enemy, envWater, envAvoidsEarth, generic, human, kobol, populated, warlords"

			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			size=				"322"
			fireRateAdj=		"20"
			explosionType=		"&CORE_vtThermoExplosion2;"
			ejectaType=			"&CORE_vtWreckEjecta;"
			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+kobolSpace;"
				systemAffinity=			"+envWater; -envEarth;"
				levelFrequency=			"----- -cur- ----- ----- -----"

				locationCriteria=		"+planetary"
				enemyExclusionRadius=	"100"
				/>

		<!-- Configuration -->

		<Hull 	hullType=		"multiHull"
				armorID=		"&HS_itAdvancedCeralloyArmor;"
				hitPoints=		"470"
				regen=			"5"
				/>
		
		<Devices>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="15"  posRadius="105" posZ="35"	fireArc="210"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="105" posRadius="105" posZ="35"	fireArc="210"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="195" posRadius="105" posZ="35"	fireArc="210"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="285" posRadius="105" posZ="35"	fireArc="210"/>

			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="60"  posRadius="60"  posZ="35"	omnidirectional="true" missileDefense="true" maxFireRange="6"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="150" posRadius="60"  posZ="35"	omnidirectional="true" missileDefense="true" maxFireRange="6"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="240" posRadius="60"  posZ="35"	omnidirectional="true" missileDefense="true" maxFireRange="6"/>
			<Device deviceID="&HS_itTeV9Blaster;"	posAngle="330" posRadius="60"  posZ="35"	omnidirectional="true" missileDefense="true" maxFireRange="6"/>
		</Devices>

		<!-- Ships and Defenses -->

		<Squadron table="&HS_tbKobolDefenders;"	count="challenge:standard"	reinforce="auto"/>

		<!-- Treasure and Items -->

		<Items>
			<Item count="1d12"	  item="&HS_itGotha400Seeker;"/>
			<Item count="4d12"	  item="&HS_itGotha10Missile;"/>
			<Table>
				<Lookup chance="40" count="1" table="&HS_trConsumables8;"/>
				<Lookup chance="40" count="1" table="&HS_trMinorItem8;"/>
				<Lookup chance="20" count="1" table="&HS_trMajorItem8;"/>
			</Table>
		</Items>

		<!-- Images and Effects -->

		<Image			imageID="&HS_rsKobolOutpost;" imageWidth="250" imageHeight="250" viewportRatio="0.04"/>

		<DockingPorts
				portAngle=		"-30"
				portCount=		"8"
				portRadius=		"136"
				/>

		<!-- Random Encounters -->

		<Encounters frequency="common">
			<Lookup table="&HS_tbKobolEncounters;"/>
		</Encounters>

	</StationType>

<!-- SHIP CLASSES -->

