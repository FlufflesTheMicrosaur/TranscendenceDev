<!-- TABLES -->

	<ShipTable unid="&HS_tbKobolDefenders;">
		<LevelTable>
			<Ship levelFrequency="vvvvv ucrv-"	count="1"	class="&HS_scKobolGunshipDualTeV9;"		orders="guard"/>
			<Ship levelFrequency="vvvvv ucrv-"	count="1"	class="&HS_scKobolGunshipDualTeV9;"		orders="patrol:20"/>

			<Ship levelFrequency="----- rcrv-"	count="1"	class="&HS_scKobolGunshipOmniTeV9;"		orders="guard"/>
			<Ship levelFrequency="----- rcrv-"	count="1"	class="&HS_scKobolGunshipOmniTeV9;"		orders="patrol:20"/>

			<Ship levelFrequency="----- --rcr"	count="1"	class="&HS_scKobolGunshipMissiles;"		orders="guard"/>
			<Ship levelFrequency="----- --rcr"	count="1"	class="&HS_scKobolGunshipMissiles;"		orders="patrol:20"/>
		</LevelTable>
	</ShipTable>

	<ShipTable unid="&HS_tbKobolEncounters;">
