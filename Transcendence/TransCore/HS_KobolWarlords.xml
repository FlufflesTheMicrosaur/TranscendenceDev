					<Ship count="1d4"	class="&HS_scKobolGunshipDualTeV9;"		orders="escort"/>
				</Escorts>
			</Ship>
			<Ship levelFrequency="----- -ucrv"	count="1"	class="&HS_scKobolGunshipMissiles;"	eventHandler="&RPG_evStdPatrolEncounterBehavior;">
