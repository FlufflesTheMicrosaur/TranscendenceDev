<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- Ventari Settlers ===================================================== -->

	<Sovereign UNID="&HS_svVentariSettlers;"
			name=": Ventari coalition"
			shortName=":the Ventari"
			adjective="Ventari"
			demonym=":a Ventarian(s)"
			plural="true"

			alignment="destructive order"
			/>

	<SystemMap unid="&HS_smVentariSpace;"
			displayOn="&HS_smHumanSpace;"
			>
		<TopologyProcessor priority="secondaryColony">
			<System criteria="+outerRealm;"				attributes="ventariSpace"/>
		</TopologyProcessor>
	</SystemMap>

<!-- ENCOUNTERS -->

	<!-- Ventari Colony -->

	<StationType UNID="&HS_stVentariColony;"
			name=				"Ventari colony|Ventari colonies"
			sovereign=			"&HS_svVentariSettlers;"
			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"
			dockingPorts=		"8"

			multiHull=			"true"
			armorID=			"&HS_itOrthoSteel;"
			hitPoints=			"740"
            regen=              "15"
			fireRateAdj=		"40"
			explosionType=		"&CORE_vtThermoExplosion2;"
			ejectaType=			"&CORE_vtWreckEjecta;"

			attributes=			"enemy, envFire, envAvoidsWater, generic, human, majorStation, populated"
			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+ventariSpace;"
				systemAffinity=			"+envFire; -envWater;"
				levelFrequency=			"----- ucur- ----- ----- -----"

				locationCriteria=		"+outerSystem, -planetary"
				enemyExclusionRadius=	"100"
				/>

		<Image			imageID="&HS_rsStations7;" imageX="0" imageY="448" imageWidth="192" imageHeight="192"/>

		<Devices>
			<Device deviceID="&HS_itIonCannon;"	omnidirectional="true" posAngle="60"  posRadius="85"/>
			<Device deviceID="&HS_itTeV9Blaster;"	omnidirectional="true" posAngle="155" posRadius="90"/>
			<Device deviceID="&HS_itIonCannon;"	omnidirectional="true" posAngle="240" posRadius="100"/>
			<Device deviceID="&HS_itTeV9Blaster;"	omnidirectional="true" posAngle="330" posRadius="110"/>
		</Devices>

		<Items>
			<Table>
				<Lookup chance="40" count="1" table="&HS_trConsumables8;"/>
				<Lookup chance="40" count="1" table="&HS_trMinorItem8;"/>
				<Lookup chance="20" count="1" table="&HS_trMajorItem8;"/>
			</Table>
		</Items>

		<Ships>
			<Ship					count="1d2"	class="&HS_scVentariDestroyer;"	orders="patrol" patrolDist="40"/>
		</Ships>

		<Reinforcements minShips="1">
			<Ship					count="1d2"	class="&HS_scVentariDestroyer;"	orders="patrol" patrolDist="40"/>
		</Reinforcements>

		<Encounters frequency="common">
			<Ship count="1"	class="&HS_scVentariDestroyer;"	eventHandler="&RPG_evStdWanderBehavior;"	maxShips="6"/>
		</Encounters>

	</StationType>

<!-- SHIP CLASSES -->

	<!-- Ventari Destroyer -->

	<ShipClass UNID="&HS_scVentariDestroyer;"
			manufacturer=		"Ventari"
			class=				""
			type=				"destroyer"
			defaultSovereign=	"&HS_svVentariSettlers;"

			attributes=			"capitalShip, genericClass, ventari"

			size=				"120"
			mass=				"17000"
			thrustRatio=		"1.0"
			maxSpeed=			"13"
			cargoSpace=			"1000"

			explosionType=		"&CORE_vtThermoExplosion2;"
			>

		<!-- Configuration -->
		
		<Armor
			armorID=			"&HS_itOrthoSteel;"
			count=				"12"
			/>
		
		<Devices>
			<Device deviceID="&HS_itIonDisruptor;" omnidirectional="true"								 posAngle="180"  posRadius="10"  posZ="60"/>
			<Device deviceID="&HS_itTeV9Blaster;"	secondaryWeapon="true" fireAngle="90"  fireArc="200" posAngle="105"  posRadius="60" posZ="0"/>
			<Device deviceID="&HS_itTeV9Blaster;"	secondaryWeapon="true" fireAngle="-90" fireArc="200" posAngle="-105" posRadius="60" posZ="0"/>
			<Device deviceID="&HS_itYoroiS500;"/>
			<Device deviceID="&HS_vtStdDamageControl;"		level="8"/>
			<Device deviceID="&HS_it250MWReactor;"/>
		</Devices>

		<Maneuver
			maxRotationRate=	"3.0"
			rotationAccel=		"0.5"
			/>

		<Interior>
			<Compartment name="interior"
					hitPoints=	"300"
					/>
			
			<Compartment name="main drive"
					type=		"mainDrive"
					hitPoints=	"100"

					posX=		"-45"
					posY=		"0"
					sizeX=		"40"
					sizeY=		"60"
					/>
		</Interior>

		<Items>
			<Item				count="4d6"		item="&HS_itPteracniumFuelRod;"/>
			<Item chance="20"	count="1d4"		item="&HS_itIonResistCoating;"/>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&rsVentariDestroyerHD;"	imageWidth="160" imageHeight="160"	rotationCount="120" rotationColumns="12" viewportRatio="0.01875"/>
		<HeroImage imageID="&HS_rsVentariDestroyerHero;" imageWidth="320" imageHeight="320"/>

		<Effects>
			<Effect type="thrustMain"		posAngle="165"	posRadius="61"	posZ="-20"	rotation="180"	sendToBack="*"	effect="&CORE_efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="180"	posRadius="59"	posZ="-20"	rotation="180"	sendToBack="*"	effect="&CORE_efMainThrusterLarge;"/>
			<Effect type="thrustMain"		posAngle="-165"	posRadius="61"	posZ="-20"	rotation="180"	sendToBack="*"	effect="&CORE_efMainThrusterLarge;"/>
		</Effects>

		<!-- AI and Behavior -->

		<AISettings
			fireRateAdj=		"20"
			fireAccuracy=		"90"
			perception=			"6"
			
			combatStyle=		"standoff"
			/>

	</ShipClass>

<!-- ITEM TYPES -->

	<!-- Level 7: Ion Disruptor -->

	<ItemType UNID="&HS_itIonDisruptor;"
			name=				"ion disruptor"
			attributes=			"energyWeapon, military, majorItem, notForSale, ventari"
			  
			level=				"7"
			frequency=			"rare"

			value=				"35000"
			mass=				"3000"
			  
			description=		"The ion disruptor's beam can penetrate a ship's hull and ionize the delicate mechanisms of weapons and other devices."
			>

		<Image imageID="&HS_rsItemsEI3;" imageX="288" imageY="0" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"beam"

				damage=				"ion:5d6; deviceDisrupt:2"
				fireRate=			"20"
				lifetime=			"30"
				powerUse=			"500"

				effect=				"&HS_efEIDisruptorBeam;"
				fireEffect=			"&HS_efEIDisruptorFire;"
				hitEffect=			"&HS_efEIDisruptorHit;"
				sound=				"&CORE_snLaserCannon;"
				>
		</Weapon>

	</ItemType>

<!-- RESOURCES -->

	<Image UNID="&rsVentariDestroyerHD;"	bitmap="Resources\VentariDestroyerHD.jpg" bitmask="Resources\VentariDestroyerHDMask.bmp" loadOnUse="true"/>
	<Image UNID="&HS_rsVentariDestroyerHero;"	bitmap="Resources\VentariDestroyerLarge.jpg" bitmask="Resources\VentariDestroyerLargeMask.bmp" loadOnUse="true"/>
	
</TranscendenceModule>
