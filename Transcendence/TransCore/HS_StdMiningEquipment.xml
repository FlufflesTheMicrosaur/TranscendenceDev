<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>
	
<!-- ITEMS -->
	
	<!-- Level 2: Mining Laser -->

	<ItemType UNID="&HS_itMiningLaser;"
			name=				"mining laser"
			attributes=			"commonwealth, EI, energyWeapon, essentialMiningEquipment, majorItem, miningEquipment, specialty"
			  
			level=				"2"
			frequency=			"rare"

			value=				"1150"
			mass=				"2000"
			  
			description=		"This powerful laser is generally used for asteroid mining. Mining lasers are particularly effective on icy and primordial asteroids."
			>

		<Image imageID="&HS_rsItems2;" imageX="96" imageY="96" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"beam"

				repeating=			"4"
				damage=				"laser:1d4+1; mining:5;"
				fireRate=			"30"
				lifetime=			"15"
				powerUse=			"30"

				fireEffect=			"&HS_efGreenLaserFireEffect;"
				hitEffect=			"&HS_efGreenLaserHitEffect;"
				sound=				"&CORE_snLaserCannon;"
				>
			<Effect>
				<Beam
						beamType=			"laser"
						primaryColor=		"0x5f, 0xf1, 0x2a"
						secondaryColor=		"0x00, 0xff, 0x00"
						/>
			</Effect>			
		</Weapon>
	</ItemType>

	<!-- Level 3: Magma Cutter -->

	<ItemType UNID="&HS_itMagmaCutter;"
			name=				"magma cutter(s)"
			attributes=			"commonwealth, essentialMiningEquipment, majorItem, miningEquipment, NAMI, specialty"
			  
			level=				"3"
			frequency=			"rare"

			value=				"2400"
			mass=				"3000"
			  
			description=		"22nd century miners relied on magma cutters to carve up iron-rich asteroids. Magma cutters are particularly effective on metallic and icy asteroids."
			>

		<Image imageID="&HS_rsItems3;" imageX="0" imageY="288" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"particles"
				damage=				"blast:16; mining:5; WMD:4"
				
				fireRate=			"30"

				powerUse=			"50"
				sound=				"&CORE_snRecoillessCannon;"
				>
			
			<ParticleSystem
					style=				"spray"
					emitLifetime=		"1"
					emitRate=			"60-75"
					emitSpeed=			"40"
					spreadAngle=		"1"
					
					particleLifetime=	"30"
					>
				<ParticleEffect>
					<Particle
							style=			"flame"
							minWidth=       "1"
							maxWidth=		"5-10"
							/>
				</ParticleEffect>
			</ParticleSystem>
		</Weapon>
	</ItemType>

	<!-- Level 3: Miner's Cargo Hold -->

	<ItemType UNID="&HS_itMinersCargoHold;"
			name=				"miner's cargo hold"
			attributes=			"autoLootOre, commonwealth, essentialMiningEquipment, majorItem, minersHold, miningEquipment"
			  
			level=				"3"
			frequency=			"rare"

			value=				"2000"
			mass=				"1250"
			  
			description=		"Designed for mining ships, this cargo hold has grapples to bring ore on board."
			>

		<Image imageID="&HS_rsItems3;" imageX="96" imageY="288" imageWidth="96" imageHeight="96"/>

		<CargoHoldDevice
				cargoSpace=		"150"
				>
			<Equipment>
				<Install equipment="miningComputer"/>
			</Equipment>
		</CargoHoldDevice>

	</ItemType>

	<!-- Level 4: Proton Drill -->

	<ItemType UNID="&HS_itProtonDrill;"
			name=				"proton drill"
			attributes=			"commonwealth, EI, energyWeapon, essentialMiningEquipment, majorItem, miningEquipment, specialty"
			  
			level=				"4"
			frequency=			"rare"

			value=				"5000"
			mass=				"3500"
			  
			description=		"This proton beam weapon is primarily used for mining. It is particularly effective on icy and primordial asteroids."
			>

		<Image imageID="&HS_rsItems4;" imageX="288" imageY="288" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"beam"

				damage=				"particle:3d8+1; mining:6;"
				fireRate=			"20"
				lifetime=			"15"
				powerUse=			"100"

				effect=				"&CORE_efParticleBeamDefault;"
				fireEffect=			"&CORE_efParticleFireDefault;"
				hitEffect=			"&CORE_efParticleHitDefault;"
				sound=				"&CORE_snLaserCannon;"
				/>
	</ItemType>

	<!-- Level 6: Plasma Torch -->

	<ItemType UNID="&HS_itPlasmaTorch;"
			name=				"plasma torch(es)"
			attributes=			"commonwealth, essentialMiningEquipment, majorItem, miningEquipment, NAMI, specialty"
			  
			level=				"6"
			frequency=			"rare"

			value=				"12000"
			mass=				"4000"
			  
			description=		"Plasma torches are used for large-scale asteroid mining. They are effective on icy and metallic asteroids."
			>

		<Image imageID="&HS_rsItems6;" imageX="192" imageY="96" imageWidth="96" imageHeight="96"/>

		<Weapon
				type=				"particles"
				damage=				"plasma:30; mining:5; WMD:2"
				
				fireRate=			"30"

				powerUse=			"300"
				sound=				"&CORE_snRecoillessCannon;"
				>
			
			<ParticleSystem
					style=				"spray"
					emitLifetime=		"1"
					emitRate=			"60-75"
					emitSpeed=			"40"
					spreadAngle=		"1"
					
					particleLifetime=	"30"
					particleEffect=		"&CORE_efPlasmaParticleDefault;"
					>
			</ParticleSystem>
		</Weapon>
	</ItemType>

</TranscendenceModule>
