<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>
	
	<!-- Cargo Crate -->

	<StationType UNID="&RPG_stGenericCargoCrate;"
			name=				"abandoned cargo crate"
			sovereign=			"&CORE_svNeutral;"
			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			attributes=			"crate"

			structuralHitPoints="10"
			ejectaType=			"&CORE_vtWreckEjecta;"

			scale=				"ship"
			mobile=				"true"
			mass=				"50"
			destroyWhenEmpty=	"true"
			noMapIcon=			"true"
			>

		<ImageVariants>
			<Image			imageID="&RPG_rsGenericCargoCrate;" imageX="0" imageY="0" imageWidth="32" imageHeight="32" />
			<Image			imageID="&RPG_rsGenericCargoCrate;" imageX="0" imageY="32" imageWidth="32" imageHeight="32" />
			<Image			imageID="&RPG_rsGenericCargoCrate;" imageX="0" imageY="64" imageWidth="32" imageHeight="32" />
			<Image			imageID="&RPG_rsGenericCargoCrate;" imageX="0" imageY="96" imageWidth="32" imageHeight="32" />
		</ImageVariants>

		<Events>
			<GetExplosionType>
				(intContainerGetExplosionType gSource)
			</GetExplosionType>

			<OnDamage>
				(intContainerOnDamage gSource aDamageHP)
			</OnDamage>
		</Events>

		<DockingPorts
				portCount=		"2"
				portRadius=		"24"
				maxDist=		"3"
				/>

		<Language>
			<Text id="descAbandonedStation">
				"You are docked with an abandoned cargo crate."
			</Text>
		</Language>
	</StationType>

	<!-- Shipwreck -->

	<StationType UNID="&CORE_stShipwreck;"
			name=				"(shipwreck)"
			sovereign=			"&CORE_svNeutral;"
			dockScreen=			"&RPG_dsRPGAbandonedStation;"
			scale=				"ship"
			mobile=				"true"
			noMapIcon=			"true"

			ejectaType=			"&CORE_vtWreckEjecta;"
			
			attributes=			"shipwreck"
			>
		<Events>
			<GetExplosionType>
				(intContainerGetExplosionType gSource)
			</GetExplosionType>

			<OnDamage>
				(intContainerOnDamage gSource aDamageHP)
			</OnDamage>
		</Events>

		<DockingPorts
				portCount=		"2"
				portRadius=		"48"
				maxDist=		"3"
				/>
	</StationType>

<!-- RESOURCES -->

	<Image UNID="&RPG_rsGenericCargoCrate;"	bitmap="Resources\CargoCrate.jpg"		bitmask="Resources\CargoCrateMask.bmp"		loadOnUse="true" />
	
</TranscendenceModule>
