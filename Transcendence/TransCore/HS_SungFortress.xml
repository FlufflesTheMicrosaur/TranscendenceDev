<TranscendenceModule>

<!-- ENCOUNTERS -->

	<!-- Level 5: Sung Fortress -->

	<StationType UNID="&HS_stSungFortress;"
			name=				"Sung fortress(es)"
			sovereign=			"&HS_svSung;"

			attributes=			"enemy, envAir, envEarth, envFire, envWater, generic, human, majorStation, populated, sungSlavers"

			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			size=				"328"
			armorID=			"&HS_itSungArmor;"
			hitPoints=			"400"
			multiHull=			"true"
            regen=              "11"

			explosionType=		"&CORE_vtBlastExplosion4;"
			ejectaType=			"&CORE_vtWreckEjecta;"
			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+sungSpace;"
				systemAffinity=			"*"
				levelFrequency=			"---vc uu--- ----- ----- -----"

				locationCriteria=		"+planetary"
				enemyExclusionRadius=	"100"
				/>

		<!-- Treasure and Items -->

		<Items>
			<Lookup					count="1d4"	table="&HS_trStationSupplies;" />
			<Lookup					count="1"	table="&HS_trConsumables6;"/>
			<Lookup					count="1"	table="&HS_trMinorItem6;"/>
			<Table chance="75">
				<Lookup chance="40" count="1" table="&HS_trConsumables7;"/>
				<Lookup chance="40" count="1" table="&HS_trMinorItem7;"/>
				<Lookup chance="20" count="1" table="&HS_trMajorItem7;"/>
			</Table>
		</Items>

		<!-- Configuration -->

		<!-- Ships and Defenses -->

		<Ships>
			<Table>
				<Ship chance="30"	count="2d6" class="&HS_scWindSlaver;"		orders="patrol" patrolDist="20"/>
				<Group chance="60">
					<Ship			count="1"	class="&HS_scSteelSlaver;"		orders="patrol" patrolDist="20"/>
					<Ship			count="2d4"	class="&HS_scWindSlaver;"		orders="patrol" patrolDist="20"/>
				</Group>
				<Ship chance="10"	count="1d4"	class="&HS_scSteelSlaver;"		orders="patrol" patrolDist="20"/>
			</Table>
		</Ships>

		<Reinforcements minShips="3">
			<Table>
				<Ship chance="75"	count="1d4"	class="&HS_scWindSlaver;"	orders="patrol" patrolDist="20"/>
				<Ship chance="25"	count="1d2"	class="&HS_scSteelSlaver;"	orders="patrol" patrolDist="20"/>
			</Table>
		</Reinforcements>

		<!-- Satellites -->

		<Satellites>
			<Station type="&HS_stSungFortressWallNW;" xOffset="-99" yOffset="59"	segment="true"/>
			<Station type="&HS_stSungFortressWallNE;" xOffset="59"  yOffset="99"	segment="true"/>
			<Station type="&HS_stSungFortressWallSE;" xOffset="99"  yOffset="-59"	segment="true"/>
			<Station type="&HS_stSungFortressWallSW;" xOffset="-59" yOffset="-99"	segment="true"/>
		</Satellites>

		<!-- Images and Effects -->

		<Image			imageID="&HS_rsSungFortress;" imageX="384" imageY="0" imageWidth="260" imageHeight="260" viewportRatio="0.02"/>

		<DockingPorts
				portAngle=		"75"
				portCount=		"8"
				portRadius=		"140"
				/>

		<!-- Random Encounters -->

		<Encounters frequency="common">
			<Ship   count="1d4"	class="&HS_scWindSlaver;" orders="attack"/>
		</Encounters>
	</StationType>

