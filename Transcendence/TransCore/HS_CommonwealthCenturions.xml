		</Devices>

		<!-- Treasure -->

		<Items>
			<Item count="2d6" item="&HS_itHeliumAssembly;"/>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsCenturionBlock1;" imageWidth="64" imageHeight="64" rotationCount="120" rotationColumns="12" viewportRatio="0.005"/>
