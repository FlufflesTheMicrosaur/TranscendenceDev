<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- Sapiens ============================================================== -->

	<Sovereign UNID="&HS_svSapiens;"
			name=":the Sapiens Preservation Society"
			shortName=": Sapiens"
			adjective="Sapient"
			demonym=":a Sapient(s)"
			plural="true"

			alignment="destructive chaos"
			/>

	<SystemMap unid="&HS_smSapiensSpace;"
			displayOn="&HS_smHumanSpace;"
			>
		<TopologyProcessor priority="secondaryColony">
			<System criteria="+newBeyond;"		attributes="sapiensSpace"/>
			<System criteria="+ungoverned;"		attributes="sapiensSpace"/>
		</TopologyProcessor>
	</SystemMap>

<!-- ENCOUNTERS -->

	<!-- Level 3: Sapiens Outpost -->

	<StationType UNID="&HS_stTerroristCamp;"
			name=				"Sapiens outpost(s)"
			sovereign=			"&HS_svSapiens;"

			attributes=			"enemy, envFire, envAvoidsWater, generic, human, populated, sapiens, sapiensCamp"

			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			size=				"252"
			fireRateAdj=		"30"
			explosionType=		"&CORE_vtRadioactiveExplosion1;"
			ejectaType=			"&CORE_vtWreckEjecta;"
			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+sapiensSpace;"
				systemAffinity=			"+envFire; -envWater;"
				levelFrequency=			"-vcuv ----- ----- ----- -----"

				locationCriteria=		"+lifeZone"
				enemyExclusionRadius=	"50"
				/>

		<Encounters frequency="common">
			<Lookup table="&HS_tbSapiensEncounters;"/>
		</Encounters>

		<!-- Configuration -->

		<Hull 	hullType=		"multiHull"
				armorID=		"&HS_itHardenedReactiveArmor;"
				hitPoints=		"120"
				regen=			"1"
				/>
		
		<Devices>
			<Device deviceID="&HS_itFlenserCannon;"	omnidirectional="true"/>
			<Device deviceID="&HS_vtSapiensMineLauncher;"/>
		</Devices>

		<!-- Ships and Defenses -->

		<Ships>
			<Table>
				<Ship chance="60" class="&HS_scPlague;" count="1d4" orders="guard"/>
				<Ship chance="30" class="&HS_scRevelations;" count="1d2" orders="guard"/>
				<Group chance="10">
					<Ship class="&HS_scPlague;" count="1" orders="guard"/>
					<Ship class="&HS_scRevelations;" count="1" orders="guard"/>
				</Group>
			</Table>
		</Ships>

		<!-- Treasure -->

		<Items>
			<Group value="standard:level=3:x=1.3">
				<Item		chance="50"	count="1d4"	  item="&HS_itFusionTrigger;"/>
				<Item		chance="50"	count="1d6"	  item="&HS_itRadioactiveWaste;"/>
				<Lookup table="&HS_trStdTreasure;"/>
			</Group>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsSapiensOutpost;"			imageWidth="230" imageHeight="230"	viewportRatio="0.0325"/>

		<DockingPorts
				portAngle=		"-8"
				portCount=		"8"
				portRadius=		"90"
				/>

		<!-- Events and Behavior -->

		<Events>
			<GetRumors>
				{
					attributes: "commonwealthPub"
					priority: 30
					textID: 'rumor.commonwealthPub
					onExitRumor: (lambda (theRumor) (objSetKnown (@ theRumor 'sourceObj)))
					}
			</GetRumors>
		</Events>

		<Language>
			<Text id="rumor.commonwealthPub">

				You spend 5 credits and listen to a nuclear technician:

				"I just got paid ten kilocreds to install a radiation room at
				the Sapiens outpost! Those flippers scare me&mdash;with all 
				their talk about 'human purity' they seem a little short on the
				brain scale."

			</Text>
		</Language>
	</StationType>

	<!-- Level 4: Sapiens Compound -->

	<StationType UNID="&HS_stTerroristCompound;"
			name=				"Sapiens compound"
			sovereign=			"&HS_svSapiens;"

			attributes=			"enemy, envFire, envAvoidsWater, generic, human, populated, sapiens, sapiensCompound"

			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			size=				"279"
			fireRateAdj=		"20"
			explosionType=		"&CORE_vtRadioactiveExplosion2;"
			ejectaType=			"&CORE_vtWreckEjecta;"
			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+sapiensSpace;"
				systemAffinity=			"+envFire; -envWater;"
				levelFrequency=			"--vcu v---- ----- ----- -----"

				locationCriteria=		"+lifeZone"
				enemyExclusionRadius=	"50"
				/>

		<Encounters frequency="common">
			<Lookup table="&HS_tbSapiensEncounters;"/>
		</Encounters>
		
		<!-- Configuration -->

		<Hull 	hullType=		"multiHull"
				armorID=		"&HS_itHardenedReactiveArmor;"
				hitPoints=		"320"
				regen=			"6"
				/>
		
		<Devices>
			<Device deviceID="&HS_itNAMIMissileLauncher;"	omnidirectional="true"/>
			<Device deviceID="&HS_vtSapiensMineLauncher;"/>
		</Devices>

		<!-- Ships and Defenses -->

		<Ships>
			<Table>
				<Ship chance="20" class="&HS_scPlague;" count="2d3" orders="guard"/>
				<Ship chance="40" class="&HS_scRevelations;" count="1d4" orders="guard"/>
				<Group chance="40">
					<Ship class="&HS_scPlague;" count="1d2+1" orders="guard"/>
					<Ship class="&HS_scRevelations;" count="1" orders="guard"/>
				</Group>
			</Table>
		</Ships>

		<!-- Treasure -->

		<Items>
			<Group value="standard:level=4:x=2.0">
				<Item chance="60"		count="2d8"	  item="&HS_itXM300Missile;"/>
				<Item chance="70"		count="4d8"	  item="&HS_itFusionTrigger;"/>
				<Item chance="60"		count="2d6"   item="&HS_itRadioactiveWaste;"/>
				<Lookup chance="50"						table="&HS_trStdTreasure;"/>
			</Group>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsSapiensCompound;"			imageWidth="262" imageHeight="262"	viewportRatio="0.04"/>

		<DockingPorts
				portAngle=		"0"
				portCount=		"12"
				portRadius=		"116"
				/>

		<!-- Events and Behavior -->

		<Events>
			<OnCreate>
				(sysAddObjRecurringTimerEvent 150 gSource "OnProduceMissiles")
			</OnCreate>
			
			<OnProduceMissiles>
				(if (not (objIsAbandoned gSource))
					(block (reapers)
						
						;	check how many reaper missiles we have and produce more if we're going to run out
						
						(setq reapers (@ (objGetItems gSource "m +unid:&HS_itXM300Missile;;") 0))
						(if (or (not reapers) (ls (itmGetCount reapers) 16))
							(objAddItem gSource
								(itmCreate &HS_itXM300Missile; (random 10 40))		;	produce between 10 and 40 missiles
								)
							)
						)
					)
			</OnProduceMissiles>
		</Events>
	</StationType>
	
<!-- SHIP CLASSES -->

	<!-- Level 4: Plague Gunship -->

	<ShipClass UNID="&HS_scPlague;"
			manufacturer=		"Revolution Designs"
			class=				"Plague"
			type=				"gunship"
			defaultSovereign=	"&HS_svSapiens;"

			attributes=			"genericClass,sapiens"
			inherit=			"&HS_scEarthzone1200;"

			radioactiveWreck=	"true"
			>

		<!-- Configuration -->

		<Armor
			armorID=			"&HS_itHardenedReactiveArmor;"
			count=				"4"
			/>
		
		<Devices>
			<Device deviceID="&HS_itWasteCannon;"/>
		</Devices>

		<!-- Treasure -->

		<Items>
			<Item count="1d6" item="&HS_itHeliumAssembly;"/>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsPlague;" imageWidth="58" imageHeight="58" rotationCount="120" rotationColumns="12" viewportRatio="0.004375"/>
		<HeroImage imageID="&HS_rsPlagueHero;" imageWidth="320" imageHeight="320"/>

		<!-- Events and Behavior -->
		
		<AISettings
			fireRateAdj=		"15"
			fireAccuracy=		"85"
			perception=			"4"
			
			combatStyle=		"advanced"
			/>

	</ShipClass>

	<!-- Level 5: Revelations Missileship -->

	<ShipClass UNID="&HS_scRevelations;"
			manufacturer=		"Revolution Designs"
			class=				"Revelations"
			type=				"missileship"
			defaultSovereign=	"&HS_svSapiens;"

			attributes=			"genericClass,sapiens"
			inherit=			"&HS_scEarthzone5000;"

			radioactiveWreck=	"true"
			explosionType=		"&CORE_vtRadioactiveExplosion1;"
			>

		<!-- Configuration -->

		<Armor
			armorID=			"&HS_itHardenedPlasteelPlate;"
			count=				"4"
			/>
		
		<Devices>
			<Device deviceID="&HS_itNAMIMissileLauncher;" minFireArc="300" maxFireArc="60">
				<Items>
					<Item count="4d6" item="&HS_itXM300Missile;"/>
				</Items>
			</Device>
			<Device deviceID="&HS_itOmniPartisanCannon;" secondaryWeapon="true"/>
		</Devices>

		<!-- Treasure -->

		<Items>
			<Item count="2d6" item="&HS_itHeliumAssembly;"/>
		</Items>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsRevelations;" imageWidth="66" imageHeight="66" rotationCount="120" rotationColumns="12" viewportRatio="0.005"/>
		<HeroImage imageID="&HS_rsRevelationsHero;" imageWidth="320" imageHeight="320"/>

		<!-- Events and Behavior -->

		<AISettings
			aggressor=			"true"
			fireRateAdj=		"30"
			fireAccuracy=		"90"
			perception=			"4"
			
			combatStyle=		"advanced"
			/>

	</ShipClass>

<!-- ITEM TYPES -->

	<!-- Level 4: Actinide Waste Cannon -->

	<ItemType UNID="&HS_itWasteCannon;"
			name=				"actinide waste cannon"
			attributes=			"illegal, majorItem, sapiens, notStandard;"
			  
			level=				"4"
			frequency=			"rare"

			value=				"6200"
			mass=				"6000"
			  
			description=		"The actinide waste cannon is a dirty weapon that shoots out a cloud of radioactive debris."
			>

		<Image imageID="&HS_rsItems4;" imageX="288" imageY="96" imageWidth="96" imageHeight="96"/>

		<Weapon
				fireRate=			"30"

				type=				"missile"
				repeating=			"3"

				lifetime=			"60"
				damage=				"blast:1d8; radiation1; WMD1"
				powerUse=			"60"

				missileSpeed=		"20"
				
				hitEffect=			"&CORE_efRadioactiveHitEffect;"
				sound=				"&CORE_snLaserCannon;"
				>

			<Configuration aimTolerance="5">
				<Shot angle="3d5-9"/>
			</Configuration>
			
			<Effect>
				<Orb	style=			"fireblast"
						animate=		"explode"
						lifetime=		"60"

						blendMode=		"screen"
						primaryColor=	"#00ff2b"
						secondaryColor=	"#008015"
						>
					<Events>
						<GetParameters>
							(block (
								(damageHP (@ gData 'damageHP))
								(weaponUNID (@ gData 'weaponUNID))
								)
							
								{
									radius: (if (= damageHP 0) 10 (mathScale damageHP 5 64 20 45 50))
									;lifetime: (if (= damageHP 0) 4 (mathScale damageHP 5 64 12 48 50))
								
									intensity: (seededRandom weaponUNID 50 70)
									distortion: (mathScale damageHP 5 64 50 0 100)
									detail: (seededRandom weaponUNID 20 25)
									}
								)
						</GetParameters>
					</Events>
				</Orb>
			</Effect>
		</Weapon>
	</ItemType>

	<!-- Level 4: Mine Launcher -->

	<ItemType UNID="&HS_vtSapiensMineLauncher;"
			name=				"(Sapiens mine launcher)"
			level=				"4"
			virtual=			"true"
			>
		<MiscellaneousDevice>
		</MiscellaneousDevice>

		<Events>
			<OnUpdate>
				(switch
					(obj@ gSource 'abandoned)
						Nil

					(gr (random 1 100) 50)
						Nil

					(sysCreateWeaponFire &HS_itSapiensRadiationMine; 
							{
								obj: gSource
								namePattern: (typ@ &HS_itSapiensRadiationMine; 'namePattern)
								}
							gSource 
							(random 0 359)
							20 
							nil)
					)
			</OnUpdate>
		</Events>
	</ItemType>

	<!-- Level 4: Radiation Mine -->

	<ItemType UNID="&HS_itSapiensRadiationMine;"
			name=				"Sapiens radiation mine(s)"
			attributes=			"consumable, illegal, sapiens, notStandard"
			  
			level=				"4"
			frequency=			"rare"
			numberAppearing=	"8-24"

			value=				"10"
			mass=				"40"
			  
			description=		"This radioactive mine triggers when an enemy ship comes within range."
			>

		<Image imageID="&HS_rsItems4;" imageX="0" imageY="384" imageWidth="96" imageHeight="96"/>
		
		<Invoke>
			(block ()
				(sysCreateWeaponFire &HS_itSapiensRadiationMine; 
						{
							obj: gSource
							namePattern: (typ@ &HS_itSapiensRadiationMine; 'namePattern)
							}
						gSource 
						(random 0 359)
						5 
						nil)

				(objRemoveItem gSource gItem 1)
				)
		</Invoke>

		<Missile
				type=			"missile"

				missileSpeed=	"15"
				accelerationFactor="60"
				lifetime=		"4800"
				hitPoints=		"10"
				stealth=		"15"

				noFriendlyFire=	"true"
				noDetonationOnEndOfLife="true"

				hitEffect=		"&CORE_efBlastHitDefault;"
				sound=			"&CORE_snMissileLauncher;"
				>

			<Effect>
				<Image imageID="&HS_rsSapiensRadiationMine;" imageX="0" imageY="0" imageWidth="32" imageHeight="32" imageFrameCount="120" animationColumns="12" imageTicksPerFrame="2"/>
			</Effect>

			<Fragment
					count=			"1"
					type=			"radius"

					damage=			"blast:3d8; radiation:2; momentum:2; WMD:2"
					minRadius=		"1"
					maxRadius=		"4"
					missileSpeed=	"0"
					
					hitEffect=		"&CORE_efRadioactiveHitEffect;"
					>
				<Effect>
					<Orb	style=			"fireblast"
							animate=		"explode"
							radius=			"110"
							lifetime=		"43"
							intensity=		"100"
							distortion=		"50"
							detail=			"40"
					
							blendMode=		"normal"
							primaryColor=	"#00ff2b"
							secondaryColor=	"#008015"
							/>
			
					<Orb	style=			"smooth"
							animate=		"fade"
							radius=			"50"
							lifetime=		"23"
							intensity=		"60"
					
							blendMode=		"screen"
							primaryColor=	"#fffff0"
							secondaryColor=	"#ccff99"
							/>
				</Effect>
			</Fragment>
		</Missile>
	</ItemType>

<!-- TABLES -->
	
