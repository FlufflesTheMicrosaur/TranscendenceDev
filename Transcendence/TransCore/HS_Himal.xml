<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

<!-- Himal Separatists ==================================================== -->

	<Sovereign UNID="&HS_svHimalSeparatists;"
			name=":the Himal coalition"
			shortName=":the Himal"
			adjective="Himal"
			demonym=":a Himalian(s)"
			plural="true"

			alignment="destructive order"
			/>

	<SystemMap unid="&HS_smHimalSpace;"
			displayOn="&HS_smHumanSpace;"
			>
		<TopologyProcessor priority="secondaryColony">
			<System criteria="+newBeyond;"	attributes="himalSpace"/>
		</TopologyProcessor>
	</SystemMap>

<!-- ENCOUNTERS -->

	<!-- Level 1: Himal Refuge -->

	<StationType UNID="&HS_stHimalRefuge;"
			name=				"Himal refuge"
			sovereign=			"&HS_svHimalSeparatists;"

			attributes=			"asteroidBase, enemy, envAir, envAvoidsFire, generic, himal, human, populated"

			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"

			size=				"78"
			fireRateAdj=		"30"
			explosionType=		"&CORE_vtKineticExplosion1;"
			ejectaType=			"&GLXY_vtIceAsteroidEjecta;"
			>

		<!-- Encounter Info -->
		
		<Encounter
				systemCriteria=			"+himalSpace;"
				systemAffinity=			"+envAir; -envFire;"
				levelFrequency=			"cuv-- ----- ----- ----- -----"

				locationCriteria=		"+outerSystem, -planetary"
				enemyExclusionRadius="50"
				/>

		<!-- Configuration -->

		<Hull 	hullType=		"asteroidHull"
				armorID=		"&HS_itLightPlasteelPlate;"
				hitPoints=		"40"
				regen=			"1"
				/>
		
		<Devices>
			<Device deviceID="&HS_itBlaster;"	omnidirectional="true"/>
		</Devices>

		<!-- Ships and Defenses -->

		<Ships challenge="standard">
			<Ship			count="1"	class="&HS_scHimalInterceptor;"	orders="patrol:15"/>
		</Ships>

		<!-- Treasure -->

		<Items>
			<Table count="1d6">
				<Item   chance="20"	count="1d6"		item="&CORE_itHelium3FuelRod;" />
				<Item   chance="20"	count="1d12"	item="&HS_itWaterIce;" />
				<Item   chance="20"	count="1d4"		item="&HS_itMartianNori;" />
				<Lookup chance="15" count="1"		table="&HS_trConsumables1;"/>
				<Lookup chance="15" count="1"		table="&HS_trMinorItem1;"/>
				<Lookup chance="10"	count="1"		table="&HS_trMajorItem1;"/>
			</Table>
		</Items>

		<!-- Image and Effects -->

		<ImageVariants>
			<LocationCriteriaTable>
				<Image criteria="*ice"			imageID="&HS_rsHimalRefugeIce;"			imageWidth="260" imageHeight="260"	viewportRatio="0.0325"/>
				<Image criteria="*metallic"		imageID="&HS_rsHimalRefugeMetallic;"		imageWidth="260" imageHeight="260"	viewportRatio="0.0325"/>
				<Image criteria="*primordial"	imageID="&HS_rsHimalRefugePrimordial;"		imageWidth="260" imageHeight="260"	viewportRatio="0.0325"/>
				<Image criteria="*volcanic"		imageID="&HS_rsHimalRefugeVolcanic;"		imageWidth="260" imageHeight="260"	viewportRatio="0.0325"/>
				
				<Image criteria="*~"			imageID="&HS_rsHimalRefugeRocky;"			imageWidth="260" imageHeight="260"	viewportRatio="0.0325"/>
			</LocationCriteriaTable>
		</ImageVariants>

		<DockingPorts
				portCount=		"8"
				portRadius=		"120"
				>
		</DockingPorts>

		<!-- Random Encounters -->

		<Encounters frequency="uncommon">
			<LevelTable>
				<Ship levelFrequency="ccccc ccccc" count="1"	class="&HS_scHimalInterceptor;" eventHandler="&RPG_evStdZoneEncounterBehavior;">
					<Escorts>
						<Ship					   count="1d2"	class="&HS_scHimalInterceptor;" orders="escort"/>
					</Escorts>
				</Ship>
			</LevelTable>
		</Encounters>

	</StationType>

<!-- SHIP CLASSES -->

	<!-- Level 2: Himal Interceptor -->

	<ShipClass UNID="&HS_scHimalInterceptor;"
			manufacturer=		"Himal"
			class=				""
			type=				"interceptor"
			defaultSovereign=	"&HS_svHimalSeparatists;"

			attributes=			"genericClass, himal, himalSettlers"

			size=				"31"
			mass=				"20"
			thrustRatio=		"10"
			maxSpeed=			"30"
			cargoSpace=			"5"
			>

		<!-- Configuration -->

		<Armor
			armorID=			"&HS_itUltraLightTitaniumCasing;"
			count=				"2"
			/>
		
		<Devices>
			<Device deviceID="&HS_itBlaster;"	posAngle="0" posRadius="30" posZ="0"/>
		</Devices>

		<Maneuver
			maxRotationRate=	"9.0"
			rotationAccel=		"2.0"
			/>

		<!-- Image and Effects -->

		<Image imageID="&HS_rsHimalInterceptor;"	imageWidth="56" imageHeight="56" rotationCount="120" rotationColumns="12" rotationOffset="5" viewportRatio="0.004375"/>
		<HeroImage imageID="&HS_rsHimalInterceptorHero;" imageWidth="320" imageHeight="320"/>

		<!-- AI and Behavior -->

		<AISettings
			fireRateAdj=		"40"
			fireRangeAdj=		"40"
			fireAccuracy=		"75"
			perception=			"4"
			
			combatStyle=		"flyby"
			/>
		
		<Effects>
			<Effect type="thrustMain"		posAngle="180"	posRadius="21"	posZ="10"	rotation="180"/>
			<Effect type="thrustMain"		posAngle="160"	posRadius="22"	posZ="0"	rotation="180"/>
			<Effect type="thrustMain"		posAngle="-160"	posRadius="22"	posZ="0"	rotation="180"/>
		</Effects>
	</ShipClass>

<!-- RESOURCES -->

	<Image UNID="&HS_rsHimalInterceptor;"			bitmap="Resources\HimalInterceptor.jpg"		bitmask="Resources\HimalInterceptorMask.bmp"  loadOnUse="true"/>
	<Image UNID="&HS_rsHimalInterceptorHero;"		bitmap="Resources\HimalInterceptorLarge.jpg"		bitmask="Resources\HimalInterceptorLargeMask.bmp"  loadOnUse="true"/>

	<Image UNID="&HS_rsHimalRefugeIce;"			bitmap="Resources\HimalRefugeIce.jpg"		bitmask="Resources\HimalRefugeIceMask.bmp"  loadOnUse="true"/>
	<Image UNID="&HS_rsHimalRefugeMetallic;"		bitmap="Resources\HimalRefugeMetallic.jpg"		bitmask="Resources\HimalRefugeMetallicMask.bmp"  loadOnUse="true"/>
	<Image UNID="&HS_rsHimalRefugePrimordial;"		bitmap="Resources\HimalRefugePrimordial.jpg"		bitmask="Resources\HimalRefugePrimordialMask.bmp"  loadOnUse="true"/>
	<Image UNID="&HS_rsHimalRefugeRocky;"			bitmap="Resources\HimalRefugeRocky.jpg"		bitmask="Resources\HimalRefugeRockyMask.bmp"  loadOnUse="true"/>
	<Image UNID="&HS_rsHimalRefugeVolcanic;"		bitmap="Resources\HimalRefugeVolcanic.jpg"		bitmask="Resources\HimalRefugeVolcanicMask.bmp"  loadOnUse="true"/>

</TranscendenceModule>
