<?xml version="1.0" encoding="utf-8"?>

<TranscendenceModule>

	<!-- Charon Pirate Fortress

	GLOBAL DATA

	status:				Status of Charon Fortress
							Nil						= OK
							'destroyed				= fortress destroyed
							'allDestroyed			= all Charon stations (including fortress) destroyed
	-->

	<StationType UNID="&HS_stCharonPirateFortress;"
			name=				"Fortress of the Charon Pirates"
			sovereign=			"&HS_svPirates;"
			abandonedScreen=	"&RPG_dsRPGAbandonedStation;"
			dockingPorts=		"8"

			multiHull=			"true"
			armorID=			"&HS_itAdvancedReactiveArmor;"
			hitPoints=			"600"
            regen=              "5"
			fireRateAdj=		"20"
			explosionType=		"&CORE_vtBlastExplosion4;"
			ejectaType=			"&CORE_vtWreckEjecta;"

			attributes=			"charonFortress, charonPirates, enemy, generic, human, majorStation, pirates, populated, primaryStronghold"
			level=				"3"
			alertWhenAttacked=	"100"

			definiteArticle=	"true"
			>

		<Image			imageID="&HS_rsStations3;" imageX="0" imageY="352" imageWidth="256" imageHeight="256"/>

		<Devices>
			<Device deviceID="&HS_itParticleBeamWeapon;"	omnidirectional="true" posAngle="45"  posRadius="60"/>
			<Device deviceID="&HS_itParticleBeamWeapon;"	omnidirectional="true" posAngle="215" posRadius="60"/>
		</Devices>

		<Ships>
			<!-- Docked -->

			<Table>
				<Ship chance="10"	count="2d3"	class="&HS_scViking;"		orders="guard"/>
				<Group chance="30">
					<Ship			count="1d6"	class="&HS_scCorsair;"		orders="guard"/>
					<Ship			count="1d2"	class="&HS_scCorsair-II;"	orders="guard"/>
				</Group>
				<Group chance="20">
					<Ship			count="1d4"	class="&HS_scViking;"		orders="guard"/>
					<Ship			count="1"	class="&HS_scCorsair-II;"	orders="guard"/>
				</Group>
				<Group chance="15">
					<Ship			count="1d2"	class="&HS_scViking;"		orders="guard"/>
					<Ship			count="1"	class="&HS_scDrake;"		orders="guard"/>
				</Group>
				<Group chance="15">
					<Ship			count="1d6"	class="&HS_scCorsair;"		orders="guard"/>
					<Ship			count="1"	class="&HS_scDrake;"		orders="guard"/>
				</Group>
				<Ship chance="10"	count="1d4"	class="&HS_scCorsair-II;"	orders="guard"/>
			</Table>

			<!-- Patrol -->

			<Table>
				<Group chance="75">
					<Ship			count="1d6" class="&HS_scViking;"		orders="patrol" patrolDist="15"/>
					<Ship			count="1d2" class="&HS_scCorsair-II;"	orders="patrol" patrolDist="15"/>
				</Group>
				<Ship chance="25"	count="1"	class="&HS_scDrake;"		orders="patrol" patrolDist="20">
					<Escorts>
						<Ship			count="1d6"	class="&HS_scViking;"	orders="escort"/>
					</Escorts>
				</Ship>
			</Table>
		</Ships>

		<Reinforcements minShips="6">
			<Table>
				<Ship chance="35"	count="1d6"	class="&HS_scCorsair;"		orders="guard"/>
				<Ship chance="35"	count="1d3"	class="&HS_scViking;"		orders="guard"/>
				<Ship chance="20"	count="1d2"	class="&HS_scCorsair-II;"	orders="guard"/>
				<Ship chance="10"	count="1"	class="&HS_scDrake;"		orders="guard"/>
			</Table>
		</Reinforcements>

		<Items>
			<Item					count="8d8"	item="&HS_itKM100Missile;" />
			<Item					count="4d8"	item="&HS_itKM500Missile;" />
			<Item					count="1"	item="&HS_itClass3Deflector;" />
			<Item					count="2d4"	item="&HS_itLightBlastPlate;" />
			<Table count="1d2">
				<Lookup chance="40" count="1" table="&HS_trConsumables4;"/>
				<Lookup chance="40" count="1" table="&HS_trMinorItem4;"/>
				<Lookup chance="20" count="1" table="&HS_trMajorItem4;"/>
			</Table>
		</Items>

		<Encounters frequency="common">
			<Table>
				<Ship chance="60" count="1"	class="&HS_scViking;" eventHandler="&RPG_evStdPatrolEncounterBehavior;">
					<Escorts>
						<Table>
							<Ship chance="40" count="1d6" class="&HS_scCorsair;" orders="escort"/>
							<Ship chance="30" count="1" class="&HS_scViking;" orders="escort"/>
							<Ship chance="30" count="1" class="&HS_scCorsair-II;" orders="escort"/>
						</Table>
					</Escorts>
				</Ship>
				<Ship chance="30" count="1"	class="&HS_scCorsair-II;" eventHandler="&RPG_evStdPatrolEncounterBehavior;">
					<Escorts>
						<Ship chance="60" count="1d6" class="&HS_scCorsair;" orders="escort"/>
						<Ship chance="40" count="1" class="&HS_scViking;" orders="escort"/>
					</Escorts>
				</Ship>
				<Ship chance="10" count="1"	class="&HS_scCharonFrigateRaider;" eventHandler="&HS_evCharonRaiderBehavior;">
					<OnCreate>(objFireEvent gSource "OrderAmbush")</OnCreate>
				</Ship>
			</Table>
		</Encounters>

		<Events>
			<OnDestroy>
				(objSetGlobalData gSource "status" 'destroyed)
			</OnDestroy>
		</Events>

		<DockingPorts>
			<Port x="-6"	y="114" />
			<Port x="75"	y="103" />
			<Port x="117"	y="70" />
			<Port x="148"	y="-5" />
			<Port x="135"	y="-68" />
			<Port x="75"	y="-124" />
			<Port x="7"		y="-143" />
			<Port x="-89"	y="-116" />
			<Port x="-127"	y="-72" />
			<Port x="-142"	y="8" />
			<Port x="-120"	y="58" />
			<Port x="-58"	y="103" />
		</DockingPorts>

	</StationType>


	<!-- Charon Pirate Fortress System -->

	<SystemType UNID="&HS_ssCharonPirateFortress;"
				name=				"Charon"
				attributes=			"envAir"
				backgroundID=		"&GLXY_rsRedDwarfSpace;"
				spaceColor=			"#10131d"
				>

		<SystemGroup>

			<!-- Star -->

			<Station type="&GLXY_stStarClassM8;" name="Cardel Orionis"/>

			<AddAttribute attributes="redDwarfSystem"/>
			<AddTerritory minRadius="0"		maxRadius="200"		attributes="innerSystem, rockyComp, cinderZone"/>
			<AddTerritory minRadius="200"	maxRadius="350"		attributes="lifeZone, rockyComp, desertZone"/>
			<AddTerritory minRadius="350"	maxRadius="0"		attributes="outerSystem, rockyComp, frostZone"/>

			<!-- Lesser Anterock -->

			<Orbitals distance="1d10+75" angle="random">
				<Group>
					<Station type="&GLXY_stRockyPlanetoidSizeG;" 
							name="Lesser Anterock" 
							showOrbit="true"
							/>

					<Orbitals distance="18" angle="random">
						<Group>
							<Siblings angleInc="0">
								<Lookup table="StargateInbound"/>
							</Siblings>

							<Siblings angleInc="180">
								<Station type="&HS_stKorolovShipping;"/>
							</Siblings>
						</Group>
					</Orbitals>
				</Group>
			</Orbitals>

			<!-- Greater Anterock -->

			<Orbitals distance="1d20+150" angle="random">
				<Lookup table="StandardPlanetoidMorphology">
					<_PlanetType>
						<Station type="&GLXY_stIcePlanetoidSizeF;" 
								name="Greater Anterock" 
								showOrbit="true"
								/>
					</_PlanetType>
					<_PlanetLabel>
						<Label attributes="ice, planet, planetary, planetoid"/>
					</_PlanetLabel>
				</Lookup>
			</Orbitals>

			<!-- Cardel Prime -->

			<Orbitals distance="7" scale="light-minute" angle="random" eccentricity="30" rotation="120">
				<Lookup table="StandardGasGiantMorphology">
					<_PlanetType>
						<Station type="&GLXY_stHydrogenGasGiantSizeM;" 
								name="Cardel Prime" 
								showOrbit="true"
								/>
					</_PlanetType>
					<_PlanetLabel>
						<Label attributes="gasGiant, hydrogenGiant, planet, planetary"/>
					</_PlanetLabel>
				</Lookup>
			</Orbitals>

			<!-- Ice Belt -->

			<Orbitals distance="12" scale="light-minute" angle="random" eccentricity="40" rotation="120">
				<Lookup table="AsteroidBelt500"/>
			</Orbitals>

			<!-- Create ore deposits -->
			
			<Code>
				(trnCreateOreDeposits (random (list 0 0 0 1 1 1 1 1)))
			</Code>
			
			<!-- Charon Pirate Fortress -->

			<RandomLocation locationCriteria="*asteroidbelt">
				<Station type="&HS_stCharonPirateFortress;"/>
			</RandomLocation>

			<!-- Charon Pirate Strongholds -->

			<RandomLocation count="2d2+1" locationCriteria="++asteroids">
				<Station type="&HS_stCharonPirateOutpost3;"/>
			</RandomLocation>

			<!-- Random stations -->

			<FillLocations
					count=				"1d4" 
					stationCriteria=	"!primary, !debris, !korolovShipping" 
					percentEnemies=		"65"
					separateEnemies=	"true"
					/>

			<!-- Random Debris -->

			<RandomLocation probability="50" locationCriteria="++outerSystem, ++asteroids">
				<Orbitals count="1d6" distance="1d8+6" angle="random">
					<RandomStation stationCriteria="*debris"/>
				</Orbitals>
			</RandomLocation>

			<RandomLocation count="2d2-1" match="++asteroids">
				<RandomStation stationCriteria="*debris"/>
			</RandomLocation>

			<!-- Create more stargates in case an extension added more links -->

			<Lookup table="HumanSpaceStargates"/>

		</SystemGroup>

		<Events>
			<GetGlobalAchievements>
				(block (theList theStatus)
					(setq theStatus (typGetGlobalData &HS_stCharonPirateFortress; "status"))
					
					(if theStatus
						(setq theList (list
							(list 
								(switch
									(eq theStatus 'destroyed) "Destroyed the Fortress in the Charon system"
									(eq theStatus 'allDestroyed) "Cleared the Charon system for Korolov Shipping"
									(cat "ERROR: Charon fortress status: " (or theStatus "Nil"))
									) 
								Nil 
								"achievements &amp; regrets"
								)
							))
						)
						
					theList
					)
			</GetGlobalAchievements>
		</Events>
	</SystemType>

</TranscendenceModule>
