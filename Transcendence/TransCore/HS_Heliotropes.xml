<!-- EFFECTS -->

	<EffectType unid="&HS_efHeliotropeDefenseGrid;"
			instance=	"owner"
			>
		<Effect>
			<Orb	style=				"cloudshell"
					animate=			"dim"
					intensity=			"75"
					lifetime=			"8"
					
					primaryColor=		"#80d082"
					secondaryColor=		"#197a1a"
					opacity=			"255"
					secondaryOpacity=	"0"
					>
				<Events>
					<GetParameters>
						{
							radius: (round (* 0.6 (obj@ (@ gData 'anchorObj) 'sizePixels)))
							}
					</GetParameters>
				</Events>
			</Orb>
		</Effect>
	</EffectType>

	<EffectType UNID="&HS_efSunflareCannonEffect;"
			instance=			"owner"
			>
		<Effect>
			<Lookup effect="&CORE_efParticleBeamDefault;"/>
			
			<Ray
					style=			"smooth"
					shape=			"tapered"
					primaryColor=	"#e6ff6f"
					secondaryColor=	"#d8ff00"
					>
				<Events>
					<GetParameters>
						(block (damageHP)
							(setq damageHP (@ gData 'damageHP))

							{
								length:	(mathScale damageHP 5 64 60 220 50)
								width: (mathScale damageHP 5 64 10 20 50)
								intensity: 20
								}
							)
					</GetParameters>
				</Events>
			</Ray>
		</Effect>
	</EffectType>

