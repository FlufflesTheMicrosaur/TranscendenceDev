			>

		<!-- Encounter Info -->

		<Encounter
				systemCriteria=			"+heliotropeSpace;"
				systemAffinity=			"+envFire; -envWater;"
				levelFrequency=			"---cu r---- ----- ----- -----"

				locationCriteria=		"+innerSystem, -void"
