			<Effect type="thrustMain"		posAngle="180"	posRadius="21"	posZ="5"	rotation="180"/>
		</Effects>
		
		<AISettings
			fireRateAdj=		"20"
			fireRangeAdj=		"50"
			fireAccuracy=		"95"
			perception=			"4"
			
			combatStyle=		"advanced"
			/>

	</ShipClass>

