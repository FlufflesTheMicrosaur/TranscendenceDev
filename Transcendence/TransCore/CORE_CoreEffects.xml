<TranscendenceModule>

<!-- DEFAULT THRUSTER EFFECTS ==================================================

	These include main and maneuvering thruster effects.

-->
	
	<EffectType UNID="&CORE_efManeuveringThrusterDefault;"
			instance=			"creator"
			>
		<Effect>
			<ParticleJet
					emitRate=			"24"
					emitSpeed=			"6-10"
					particleLifetime=	"3-4"
					spreadAngle=		"1"
					>
				<ParticleEffect>
					<Particle
							style=			"plain"
							minWidth=		"1"
							maxWidth=		"2"
							primaryColor=	"#c0c0c0"
							secondaryColor=	"#808080"
							/>
				</ParticleEffect>
			</ParticleJet>
		</Effect>
	</EffectType>

	<EffectType UNID="&CORE_efMainThrusterDefault;"
			instance=			"creator"
			>
		<Effect>
			<ParticleJet
					emitRate=			"20"
					emitSpeed=			"20-30"
					particleLifetime=	"3-6"
					spreadAngle=		"4"
					>
				<ParticleEffect>
					<Particle
							style=			"plain"
							minWidth=		"1"
							maxWidth=		"3"
							primaryColor=	"#ffc041"
							secondaryColor=	"#812617"
							/>
				</ParticleEffect>
			</ParticleJet>
			
			<Ray	style=			"smooth"
					shape=			"tapered"
					blendMode=		"screen"
					>
				<Events>
					<GetParameters>
						(block (thrusterPower maxSpeed primaryTable)
							(setq thrusterPower (@ gData 'thrusterPower))
							(setq maxSpeed (@ gData 'maxSpeed))
							(setq primaryTable (list "#FF7F38" "#FF8F46" "#FFA054" "#FFB065" "#FFBF75" "#FFCF86" "#FFDF97" "#FFEEA7" "#FFFEB8" "#FFFEB8" "#FAFDC0" "#F5FDC8" "#EFFCD0" "#EAFBD8" "#E5FBDF" "#E0FAE7" "#DAF9EF" "#D5F9F7" "#D0F8FF" "#D0F8FF"))

							{
								length: (mathScale maxSpeed 12 35 30 80 50)
								width: (mathScale thrusterPower 50 1000 16 52 50)
								intensity: (mathScale maxSpeed 12 35 40 60 50)
								primaryColor: (@ primaryTable (subtract (max 16 (min maxSpeed 35)) 16))
								secondaryColor: "#812617"
								}
							)
					</GetParameters>
				</Events>
			</Ray>
		</Effect>
	</EffectType>

	<EffectType UNID="&CORE_efMainThrusterLarge;"
			instance=			"creator"
			>
		<Effect>
			<ParticleJet
					emitRate=			"15-30"
					emitSpeed=			"5-8"
					particleLifetime=	"24-60"
					spreadAngle=		"3"
					>
				<ParticleEffect>
					<Particle
							style=			"plain"
							minWidth=		"1"
							maxWidth=		"4"
							primaryColor=	"#e5c483"
							secondaryColor=	"#392f2e"
							/>
				</ParticleEffect>
			</ParticleJet>
			
				<Ray	style=			"smooth"
						shape=			"tapered"
						blendMode=		"screen"
						>
				<Events>
					<GetParameters>
						(block (thrusterPower maxSpeed primaryTable)
							(setq thrusterPower (@ gData 'thrusterPower))
							(setq maxSpeed (@ gData 'maxSpeed))
							(setq primaryTable (list "#FF7F38" "#FF8F46" "#FFA054" "#FFB065" "#FFBF75" "#FFCF86" "#FFDF97" "#FFEEA7" "#FFFEB8" "#FFFEB8" "#FAFDC0" "#F5FDC8" "#EFFCD0" "#EAFBD8" "#E5FBDF" "#E0FAE7" "#DAF9EF" "#D5F9F7" "#D0F8FF" "#D0F8FF"))

							{
								length: (mathScale maxSpeed 12 20 40 80 50)
								width: (mathScale thrusterPower 1000 5000 24 64 50)
								intensity: (mathScale maxSpeed 12 20 40 60 50)
								primaryColor: (@ primaryTable (subtract (max 16 (min maxSpeed 35)) 16))
								secondaryColor: "#812617"
								}
							)
					</GetParameters>
				</Events>
			</Ray>
		</Effect>
	</EffectType>

